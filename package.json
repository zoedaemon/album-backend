{
  "name": "album-backend",
  "version": "0.1.0",
  "description": "backend REST API for https://github.com/alex-solovev/investax-album",
  "main": "index.js",
  "scripts": {
    "start": "env-cmd -f ./.env nodemon src/app.js",
    "pretest": "cd ./src && NODE_ENV=test npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "test": "standard ./src && env-cmd -f ./.env-testunit jest --testTimeout=60000 --testEnvironment=node --coverage --runInBand --detectOpenHandles",
    "posttest": "cd ./src && NODE_ENV=test npx sequelize-cli db:migrate:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoedaemon/album-backend.git"
  },
  "keywords": [
    "nodejs",
    "album",
    "API"
  ],
  "author": "Roy Adventus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoedaemon/album-backend/issues"
  },
  "homepage": "https://github.com/zoedaemon/album-backend#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "helmet": "^4.0.0",
    "node-os-utils": "^1.3.0",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.4",
    "standard": "^14.3.4"
  },
  "devDependencies": {
    "jest": "^26.4.0",
    "mz": "^2.7.0",
    "nodemon": "^2.0.4",
    "sequelize-cli": "^6.2.0",
    "supertest": "^4.0.2"
  },
  "standard": {
    "env": [
      "jest",
      "node",
      "es6"
    ]
  }
}
